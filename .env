# ========== ESG DATA SOURCES (ALL FREE - NO KEYS NEEDED) ==========

# World Bank (No key needed - public API)
WORLD_BANK_BASE_URL=https://api.worldbank.org/v2/

# UN SDG (No key needed - public API)
UN_SDG_BASE_URL=https://unstats.un.org/sdgapi/

# Climate Monitor (Free tier)
CLIMATE_MONITOR_API_KEY=demo_key

# IMF (No key needed - public API)
IMF_BASE_URL=https://www.imf.org/external/datamapper/api/

# OECD (No key needed - public API)
OECD_BASE_URL=https://stats.oecd.org/restsdmx/sdmx.ashx/

# SEC (Free - no key needed)
SEC_BASE_URL=https://data.sec.gov/

# ========== SYSTEM CONFIGURATION ==========
PORT=3001
LOG_LEVEL=info
NODE_ENV=development

# Update frequency (seconds)
UPDATE_INTERVAL=300

# ESG weights (must sum to 1.0)
WEIGHT_ENVIRONMENTAL=0.4
WEIGHT_SOCIAL=0.3
WEIGHT_GOVERNANCE=0.3
